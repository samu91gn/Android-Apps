<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <ListPreference
        android:defaultValue="10"
        android:entries="@array/sampleratenames"
        android:entryValues="@array/sampleratevalues"
        android:key="sample_rate"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/selectsamplerate"
        android:summary="@string/lowsavebat" />
    
    
    <EditTextPreference
        android:defaultValue="60"
        android:inputType="number"
        android:key="max_duration_session"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/maxsesdur"
        android:summary="@string/dirmin"
         />

</PreferenceScreen>
